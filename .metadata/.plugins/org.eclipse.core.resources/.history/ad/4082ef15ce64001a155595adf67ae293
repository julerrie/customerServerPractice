package com.example.demo;

import java.io.File;
import java.io.IOException;
import java.util.Arrays;
import java.util.List;

import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;

import com.fasterxml.jackson.databind.ObjectMapper;



@SpringBootApplication
public class DemoApplication{

	public static void main(String[] args) {
		SpringApplication.run(DemoApplication.class, args);
	}


	@Bean
	public CommandLineRunner loadData() {
		return (arg) -> {
			// TODO Auto-generated method stub
			ObjectMapper objectMapper = new ObjectMapper();
			try {
				//Customer newCustomer = objectMapper.readValue(new File("src/main/resources/customer.json"), Customer.class);
				List <Customer> newCustomers = Arrays.asList(objectMapper.readValue(new File("src/main/resources/customer.json"), Customer[].class));
				//System.out.println(newCustomers);
			} catch (IOException e) {
		        e.printStackTrace();
			}
		};
	}
}